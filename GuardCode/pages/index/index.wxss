/* 轮播图 */

swiper {
  position: relative;
  height: 460rpx;
  background: #fff;
  box-shadow: 0px 22px 50px -24px rgba(0, 0, 0, 0.1);
}

swiper image {
  display: block;
  width: 100%;
  height: 300rpx;
}

.swiper-desc {
  height: 160rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 130rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

/* 图标导航 */

.nav-box {
  display: flex;
  padding: 40rpx 0;
  background: #fff;
  justify-content: space-around;
}

.nav-item {
  text-align: center;
}

.nav-item image {
