/* pages/fenlei/fenlei.wxss */

.topic-list-item {
  height: 240rpx;
  overflow: hidden;
  position: relative;
}

.cover {
  width: 100%;
  height: 240rpx;
  filter: brightness(80%);
  position: absolute;
}

.topic-content-brief {
  width: 80%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  text-align: center;
}

.topic-content-brief text {
  font-size: 16px;
  line-height: 1.6;
  color: #fff;
}

/* lists */

.container {
  padding: 0 24rpx;
  background-color: #fff;
  font-family: Microsoft YaHei, Helvetica, Arial, sans-serif;
}


.post-list {
  margin-bottom: 24rpx;
}

.post-item {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 24rpx 0;
  overflow: hidden;
}

.post-img {
  width: 200rpx;
  height: 160rpx;
  border-radius: 6rpx;
}

.post-desc {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  height: 80rpx;
  margin-bottom: 20rpx;
}

.post-data {
  display: flex;
  align-items: center;
}

.post-data>image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.post-data>text {
  color: #c4c4c4;
  margin-right: 32rpx;
  font-size: 20rpx;
}

.loadingmore {
  margin-top: 24rpx;
  text-align: center;
  margin-bottom: 24rpx;
}
.no-more {
color: #757575;
font-size: 30rpx;
line-height: 1.8rem;
margin-bottom: 15rpx;
text-align: center;
margin-top: 15rpx;

}

