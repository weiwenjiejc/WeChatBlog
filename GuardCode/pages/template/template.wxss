/* pages/template/template.wxss */
/* lists */
.container {
padding: 0 24rpx;
background-color: #fff;
font-family: Microsoft YaHei, Helvetica, Arial, sans-serif;

}
.container {
height: 100%;
display: flex;
flex-direction: column;
align-items: center;
justify-content: space-between;
padding: 200rpx 0;
box-sizing: border-box;

}
.post-list {
margin-bottom: 24rpx;

}
.post-item {
display: flex;
border-bottom: 1px solid #eee;
padding: 24rpx 0;
overflow: hidden;

}
.post-img {
width: 200rpx;
height: 160rpx;
border-radius: 6rpx;

}
.post-desc {
flex: 1;
margin-left: 24rpx;
display: flex;
flex-direction: column;
justify-content: space-between;

}
.post-title {
height: 80rpx;
margin-bottom: 20rpx;

}
.post-data {
display: flex;
align-items: center;

}
.post-data>image {
width: 24rpx;
height: 24rpx;
margin-right: 6rpx;

}
.post-data>text {
color: #c4c4c4;
margin-right: 32rpx;
font-size: 20rpx;

}
